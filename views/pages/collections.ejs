<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<style>
    .dataTables_actions {
        display: none;
    }
    .dataTables_length select option {
        background: #192c47;
    }
    .page-select option {
        background: #160e1c;
    }
    #stock_table td {
             word-break: break-all;
         }
</style>
<body data-sa-theme="2">
<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>

<section class="content">
    <header class="content__title">
        <h1>Collections</h1>
    </header>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="stock_table" class="table table-bordered table-striped text-center mb-0">
                    <thead>
                    <tr>
                        <th style="width: 20%">Address</th>
                        <th style="width: 20%">Creator</th>
                        <th style="width: 10%">Name</th>
                        <th style="width: 30%">URI</th>
                        <th style="width: 10%">Public</th>
                        <th style="width: 10%">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (let i = 0; i < collections.length; i++) { %>
                        <tr>
                            <td><%= collections[i].address %></td>
                            <td><%= collections[i].owner %></td>
                            <td><%= collections[i].name %></td>
                            <td><%= collections[i].uri %></td>
                            <td><%= collections[i].isPublic %></td>
                            <td><%= new Date(collections[i].timestamp * 1000).toLocaleDateString() %></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>
<%- include('../partials/foot') %>

<script>
    $(function () {
        $('#stock_table').DataTable({
            aaSorting: [],
            autoWidth: !1,
            responsive: !0,
            lengthMenu: [[15, 40, 100, -1], ['15 Rows', '40 Rows', '100 Rows', 'Everything']],
            language: {searchPlaceholder: 'Search for records...'},
            sDom: '<"dataTables__top"flB<"dataTables_actions">>rt<"dataTables__bottom"ip><"clear">'
        });
    });
</script>
</body>
</html>
